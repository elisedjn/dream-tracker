<div id="dreams-list">
  {{> nav this }}

  <h1>Your past dreams</h1>

  <form method="GET" action="/dreams/search" class="white-card">
    <div class="search-card">
      <div class="search-col">

        <div class="input-band">
          <label for="date">Date</label>
          <input id="date" type="date" name="date" placeholder="">
        </div>

        <div class="input-band">
          <label for="categories">Categories</label>
          <input id="categores" type="search" name="categories" placeholder="Select a category">
        </div>



      </div>

      <div class="search-col">

        <div class="search-radio">
          <input id="public" type="radio" name="status" value="public" class="radio-btn">
          <label for="public">Public</label>

          <input id="private" type="radio" name="status" value="private" class="radio-btn">
          <label for="private" class="entry">Private</label>
        </div>

      </div>
    </div>

    <button type="submit" class="auth-btn">Search</button>

  </form>

  <div class="white-card list-card">
    {{#each result}}
    <div class="one-dream">
      <div class="date">{{formatDate this.date "short"}}</div>
      <a href="/dreams/{{this._id}}/details">
        <h3>{{this.title}}</h3>
      </a>

      <a href="/dreams/{{this._id}}/edit"><img src="/images/edit.png" alt="Edit"></a>

      <form method="POST" action="/dreams/{{this._id}}/delete">
        <button type="submit"><img src="/images/bin.png" alt="Delete"></button>
      </form>
    </div>
    {{/each}}
  </div>

</div>