<div id="dream-flow">
{{> nav this }}

  <h1>Dream Flow</h1>

  <form method="GET" action="/dreamFlow/search" class="white-card">
    <div class="input-band">
          <label for="date">Date</label>
          <input id="date" type="date" name="date" placeholder="">
        </div>

        <div class="input-band">
          <label for="categories">Categories</label>
          <select name="categories" id="categories">
            <option value="">--Please choose a categorie--</option>
            <option value="Fantastic">Fantastic</option>
            <option value="Super Powers">Super Powers</option>
            <option value="Action">Action</option>
            <option value="Adventure">Adventure</option>
            <option value="Family">Family</option>
            <option value="Childhood">Childhood</option>
            <option value="Friends">Friends</option>
            <option value="Funny">Funny</option>
            <option value="Pets">Pets</option>
            <option value="Food">Food</option>
            <option value="Job">Job</option>
            <option value="Drama">Drama</option>
            <option value="Romance">Romance</option>
            <option value="Celebrities">Celebrities</option>
            <option value="XXX">XXX</option>
            <option value="The Unknown">The Unknown</option>
            <option value="Strangers">Strangers</option>
            <option value="Nightmare">Nightmare</option>
          </select>
        </div>
    <button type="submit" class="auth-btn">Search</button>

  </form>


  <div class="white-card list-card">
    {{#each result}}
    <div class="one-dream">
      <div class="date">{{formatDate this.date "short"}}</div>
      <a href="/dreams/{{this._id}}/details">
        <h3>{{this.title}}</h3>
      </a>
    </div>
    {{/each}}
  </div>
</div>